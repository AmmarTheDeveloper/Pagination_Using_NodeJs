    </div>
    <div class="pagination-container">

        <div class="pagination">
            <% if(page> 1){ %> <!-- checking if page is greater than one then it have previous page-->
                <a href="/?page=<%= page-1 %>" class="btn prev-next">Prev</a>
                <% } %>
                    <% for(i=1;i<=NoOfPages;i++){ %> <!-- printing no of pages button -->
                        <% if(i==page){ %>
                            <a href="/?page=<%= i %>" class="btn active">
                                <%= i %>
                            </a>
                            <% }else { %>

                                <a href="/?page=<%= i %>" class="btn">
                                    <%= i %>
                                </a>

                                <% } %>
                                    <% } %>
                                        <button class="btn no-hover">
                                            <%= page %> of <%= NoOfPages %><!-- displaying no of pages -->
                                        </button>
                                        <% if(page < NoOfPages){ %>
                                            <!-- checking if page is less than no of pages then it have next page-->

                                            <a href="/?page=<%= page + 1 %>" class="btn prev-next">Next</a>
                                            <% } %>
        </div>
    </div>

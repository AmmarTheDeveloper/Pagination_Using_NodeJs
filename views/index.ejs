                <div class="image">
                    <div class="image">
                        <img src="./images/user-icon.png" alt="">
                    </div>
                    <div class="content">
                        <p class="heading">
                            <b>
                                No : </b>
                            <%= data[i].srNo %>
                        </p>
                        <h1 class="heading">
                            <%= data[i].name %>
                        </h1>
                        <h3 class="sub-heading">
                            <%= data[i].status %>
                        </h3>

                        <p>

                            <%= data[i].content %>

                        </p>
                    </div>
                </div>
            </div>
            <% } %>

